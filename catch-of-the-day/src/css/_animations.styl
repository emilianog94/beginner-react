/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

// Para que funcione, la segunda clase -active se carga en el DOM 0.1s después de la primera, sino ambas se dispararían a la vez y no habría transición alguna

.order-enter
  transition all .5s ease
  transform translateX(-100%)
  opacity 0
  max-height 0
  padding 0 !important 
  &.order-enter-active
    transform translateX(0%)
    opacity 1
    max-height 60px
    padding 2rem 0 !important


.order-exit
  transition all .5s ease
  transform translateX(0%)
  opacity 1
  max-height 60px
  padding 2rem 0 !important
  &.order-exit-active
    transform translateX(100%)
    opacity 0
    max-height 0
    padding: 0 !important


